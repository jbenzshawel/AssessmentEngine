@model IEnumerable<AssessmentVersionDTO>

@{
    ViewData["Title"] = "Task Versions";
}

<h1 class="page-title">@ViewData["Title"]</h1>

@await Html.PartialAsync("_Loading")

<div class="row" style="display:none" id="viewContainer">
    <div class="col-lg-12">
        <div class="form-group row" id="blockTypeContainer">
            <table class="table manageParticipantTable" id="grid">
                <thead class="thead-light">
                <tr class="text-center">
                    <th scope="col">Task Type</th>
                    <th scope="col">Task Version</th>
                    <th scope="col">Created Date</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tr v-for="version in versions" class="text-center">
                    <td>{{ version.assessmentType.name }}</td>
                    <td>{{ version.versionName }}</td>
                    <td>{{ version.createdDate.toString() }}</td>
                    <td class="actionRow">
                        <a v-bind:href="'/Tasks/TaskVersion/Edit/' + version.id" type="button" class="btn btn-light">
                            Edit
                        </a>
                        <button type="button" class="btn btn-danger" v-on:click="confirmDelete(version.id)">
                            Delete
                        </button>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>

@await Html.PartialAsync("_ConfirmationModal")

@section Scripts
{
    <script>
        const viewModel = @Html.Raw(Json.Serialize(Model)); 
        const editView = new TaskVersionsView(viewModel);
    </script>
}