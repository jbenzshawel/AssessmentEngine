@model AssessmentEngine.Web.Areas.Tasks.ViewModels.CreateGroupViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-title">@ViewData["Title"]</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 offset-2" id="ajaxAlert">
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <form asp-controller="CounterBalancedTaskVersion" asp-action="CreateGroup" method="post" class="form-horizontal" role="form" id="editTaskVersionGroup">
                <div class="form-group row">
                    <label asp-for="TaskVersionName" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="TaskVersionName" class="form-control">
                        <span asp-validation-for="TaskVersionName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="AssessmentTypeId" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <select asp-for="AssessmentTypeId" asp-items="Model.AssessmentTypesLookup" class="form-control"></select>
                        <span asp-validation-for="AssessmentTypeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary mr-3">Save</button>
                    
                    <a asp-area="Tasks" asp-action="Index" asp-controller="RandomizedTaskVersion"
                       role="button" class="btn btn-light">
                        Back
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>