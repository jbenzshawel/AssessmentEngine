{
  "ConnectionStrings": {
    "ApplicationDbContext": "DataSource=wwwroot/app_data/app.db"
  },
  "WebServer": "kestrel",
  "DbProviderType": "sqlite",
  "RunMigrationsOnStartup": true,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "EFT": {
    "SeriesSize": 7,
    "ImageViewTimeSeconds": 30,
    "CognitiveLoadViewTimeSeconds": 30,
    "BlankScreenViewTimeSeconds": 5
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithExceptionDetails"
    ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": {
          "maximumDestructuringDepth": 4
        }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": {
          "maximumStringLength": 100
        }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": {
          "maximumCollectionCount": 10
        }
      }
    ]
  },
  "AllowedHosts": "*"
}